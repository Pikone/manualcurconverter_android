<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:id="@+id/linearLayoutHRK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="center_vertical"
        android:onClick="onCurrencySelected"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/white"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/image"
                android:layout_height="@dimen/image"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/image"
                    android:layout_height="@dimen/image"
                    android:src="@drawable/ic_hr"
                    android:scaleType="centerCrop"
                />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HRK"
            android:padding="10dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="40sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:padding="10dp"
            android:ellipsize="none"
            android:scrollHorizontally="true"
            android:singleLine="true"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutEUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="center_vertical"
        android:onClick="onCurrencySelected"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/white"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/image"
                android:layout_height="@dimen/image"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/image"
                    android:layout_height="@dimen/image"
                    android:src="@drawable/ic_eu"
                    android:scaleType="centerCrop"
                />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EUR"
            android:padding="10dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="40sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:padding="10dp"
            android:ellipsize="none"
            android:scrollHorizontally="true"
            android:singleLine="true"
        />
    </LinearLayout>
    <androidx.gridlayout.widget.GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:columnCount="3"
        app:rowCount="5"
        >
        <Button
            app:layout_row="0"
            app:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="0"
            app:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8592;"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="1"
            app:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="1"
            app:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="1"
            app:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="2"
            app:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="2"
            app:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="2"
            app:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="3"
            app:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="3"
            app:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="3"
            app:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="4"
            app:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
        <Button
            app:layout_row="4"
            app:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textSize="40sp"
            app:layout_columnWeight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onKeyPressed"
        />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>